<h1>Login</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/sessions" method="POST">
  <label for="email">Email:</label>
  <input type="text" name="email" id="email" />

  <label for="password">Password:</label>
  <input type="password" name="password" id="password" />

  <input type="submit" />
</form>
