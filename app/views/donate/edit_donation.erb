<h2>Edit Your Donation </h2>
<form action="/donations/<%= @donation.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="title">Title:</label>
  <input type="text" name="donation[title]" id="title" value="<%= @donation.title %>" required><br>

  <label for="description">Description:</label>
  <input type="text" name="donation[description]" id="description" value="<%= @donation.description %>" required><br>

  <label for="image_url">Item Image URL:</label>
  <input type="text" name="donation[image_url]" id="image_url" value="<%= @donation.image_url %>" required><br>

  <label for="address">Address:</label>
  <input type="text" name="donation[address]" id="address" value="<%= @donation.address %>" required><br>

  <label for="tags">Tags:</label>
  <input type="text" name="donation[tags]" id="tags" value="<%= @donation.tags %>" required><br>

  <input type="submit" name="submit" id="submit" value="Edit Donation">
</form>
