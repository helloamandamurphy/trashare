<h2>Edit Your Creation </h2>
<form action="/creations/<%= @creation.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="title">Title:</label>
  <input type="text" name="creation[title]" id="title" value="<%= @creation.title %>" required><br>

  <label for="description">Description:</label>
  <input type="text" name="creation[description]" id="description" value="<%= @creation.description %>" required><br>

  <label for="image_url">Item Image URL:</label>
  <input type="text" name="creation[image_url]" id="image_url" value="<%= @creation.image_url %>" required><br>

  <label for="directions">Directions:</label>
  <input type="text" name="creation[directions]" id="directions" value="<%= @creation.directions %>" required><br>

  <label for="tags">Tags:</label>
  <input type="text" name="creation[tags]" id="tags" value="<%= @creation.tags %>" required><br>

  <input type="submit" name="submit" id="submit" value="Edit Creation">
</form>
