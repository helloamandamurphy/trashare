<h2>Edit Your Creation </h2>
<form action="/creations/<%= @creation.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @creation.title %>"/><br>

  <label for="description">Description:</label>
  <input type="text" name="description" id="description" value="<%= @creation.description %>"/><br>

  <label for="image_url">Item Image URL:</label>
  <input type="text" name="image_url" id="image_url" value="<%= @creation.image_url %>"/><br>

  <label for="directions">Directions:</label>
  <input type="text" name="directions" id="directions" value="<%= @creation.directions %>"/><br>

  <label for="tags">Tags:</label>
  <input type="text" name="tags" id="tags" value="<%= @creation.tags %>"/><br>

  <input type="submit" name="submit" id="submit" value="Edit Creation">
</form>
