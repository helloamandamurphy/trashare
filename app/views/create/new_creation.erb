<h2>Create</h2>
<% if logged_in? %>
  <form action="/creations" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="creation[title]" id="title" required><br>

    <label for="description">Description:</label>
    <input type="text" name="creation[description]" id="description" required><br>

    <label for="image_url">Item Image URL:</label>
    <input type="text" name="creation[image_url]" id="image_url" required><br>

    <label for="directions">Directions:</label>
    <input type="text" name="creation[directions]" id="directions" required><br>

    <label for="tags">Tags:</label>
    <input type="text" name="creation[tags]" id="tags" required><br>

    <input type="submit">
  </form>

<% elsif !logged_in? %>
  <p>Please <a href="/login">log in</a> to create a new donation.<p>
<% end %>
