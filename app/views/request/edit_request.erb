<h2>Edit Your Request</h2>
<form action="/requests/<%= @request.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @request.title %>"/><br>

  <label for="description">Description:</label>
  <input type="text" name="description" id="description" value="<%= @request.description %>"/><br>

  <label for="tags">Tags:</label>
  <input type="text" name="tags" id="tags" value="<%= @request.tags %>"/><br>

  <input type="submit" name="submit" id="submit" value="Edit Request">
</form>
